#!/usr/bin/env bash

function main {
  local shome="$(cd -P -- "${BASH_SOURCE%/*}/.." && pwd -P)"
  source "$shome/script/profile"

  export PATH="$(python -m site --user-base)/bin:$PATH"
  export PYTHONPATH="$shome/vendor/blessclient/blessclient"

  exec "$shome/vendor/blessclient/vendor/virtualenv/bin/blessclient" --config "$shome/etc/blessclient.cfg" "$@"
}

main "$@"
